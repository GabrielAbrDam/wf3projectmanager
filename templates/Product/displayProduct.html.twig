{% extends 'base.html.twig' %}
{% block body %}







<div class="container">
  <div class="row">
  	{% for product in products %}
  	<div class="col-sm-4">
        <div class="card text-white bg-secondary mb-3" style="max-width: 18rem;">
        
          <div class="card-header">{{ product.getName()}} {{ product.getVersion()}}</div>
          <div class="card-body">
              <p class="card-text">{{ product.getDescription()}}</p>
          </div>
          <div class="card-footer">
          	<button class="btn btn-block btn-success">Details
          	</button>
          </div>
        </div>
        
        
    </div>	
    {% endfor %}
  </div>
</div>
	
	
	



{% endblock %}
